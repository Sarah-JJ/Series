<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Series</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/4.0/examples/blog/blog.css" rel="stylesheet">


    <style>

        .navButton {
            border: 0px;
        }

        #genreLinks{
            text-decoration: none;
        }

        #contactUs {
            display: block;
        }

        #contactUs img {
            height: 30px;
            width: 30px;
            margin: 6px 2px 3px 2px;
        }


        #headerBanner {
            margin-top: 0;
        }

        /*carousel*/
        .carousel {
            margin-bottom: 4rem;
        }

        /* Since positioning the image, we need to help out the caption */
        .carousel-caption {
            bottom: 3rem;
            z-index: 10;
        }

        /* Declare heights because of positioning of img element */
        .carousel-item {
            height: 32rem;
            background-color: #777;
        }

        .carousel-item > img {
            position: absolute;
            top: 0;
            left: 0;
            min-width: 100%;
            height: 32rem;
        }


        @media (min-width: 40em) {
            /* Bump up size of carousel content */
            .carousel-caption p {
                margin-bottom: 1.25rem;
                font-size: 1.25rem;
                line-height: 1.4;
            }

        }


    </style>
</head>

<body class="bg-light" id="bodyElement">

<span id="root">

    <nav class="row navbar sticky-top navbar-dark bg-dark justify-content-between" id="headerBanner">
      <span class="ml-3 mr-3"><a href="/mainpage" class="navbar-brand">TV Series</a>
          <a class="navbar-brand mx-3" href="/editpage">Edit</a>
      </span>


        <!-- pssst: make me an array and send me on click-->
         <span class="nav-scroller p-0 mb-0 navbar-dark bg-dark">
           <nav class="nav d-flex justify-content-between">
            <a v-for="genre in genres" @click="searchByGenre(genre)" class="p-2 text-muted navButton bg-dark" href="#" id="genreLinks">{{genre}}</a>
           </nav>
         </span>


        <div class="form-inline mr-3 mr-sm-2 ipnut-group-sm">
            <input class="mr-1" type="text" v-model="name" @keyup.13="search()" placeholder="Search by name..">
            <button @click="search()" class="btn btn-outline-light btn-sm my-2 my-sm-0 ">Search</button>
        </div>
    </nav>

        <div id="myCarousel" class="carousel slide mb-4" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">

            <div class="carousel-item active">
                <img class="first-slide"
                     src="http://the-culture-counter.com/wp-content/uploads/2013/09/All-Hail-the-King.jpg"
                     alt="First slide">
                <div class="container">
                    <div class="carousel-caption text-left">

                    </div>
                </div>
            </div>

            <div class="carousel-item" v-for="(img, index) in carouselImages" v-if="index>0">
                <img :src="img">
                <div class="container">
                    <div class="carousel-caption">
                        <p></p>
                    </div>
                </div>
            </div>

        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


<div class="container">


    <div class="row justify-content-center mb-2">

         <div class="col-md-4" v-for="(show, index) in shows" v-if="index<=2">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top"
                         :src="show.image"
                         style="height: 225px; width: 100%; display: block;">
                    <div class="card-body">
                        <p class="card-text"><b>{{show.name}}</b>
                        <div>{{show.description}}</div>
                        </p>
                        <p class="card-text"></p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group"></div>
                            <small class="text-muted">{{show.genre}}</small>
                        </div>
                    </div>
                </div>
         </div>


    </div>
</div>

<div class="container">
    <div class="row justify-content-center">

        <div class="col-md-6" v-for="(show, index) in shows" v-if="index>=3">
                <div class="card mb-4">
                    <h3 class="card-title m-3">{{show.name}}</h3>

                    <img class="card-img-top" :src="show.image" style="height: 225px; width: 100%; display: block;">
                    <div class="card-body">
                        <p class="card-text">{{show.description}}</p>
                    </div>
                </div>

        </div>

    </div><!-- /.row -->

</div><!-- /.container -->

<footer class="blog-footer">

    <div class="container">
        <div class="row justify-content-between">

            <div class="col-6 col-md-6"> A collection of TV series, made by me</div>

            <div class="col-6 col-md-6">
                <h6> Find us on: </h6>
                <span class="list-unstyled" id="contactUs">
                      <span v-for="img in contactUsImgs"><a href="#"><img :src="img"></a></span>
                    </span>
            </div>
        </div>
    </div>

</footer>
</span>


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
<script src="https://getbootstrap.com/assets/js/vendor/popper.min.js"></script>
<script src="https://getbootstrap.com/dist/js/bootstrap.min.js"></script>
<script src="https://getbootstrap.com/assets/js/vendor/holder.min.js"></script>


<script src="https://cdn.jsdelivr.net/npm/vue@2.5.13/dist/vue.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

<script>
    function getShows() {
        axios.get('/shows').then(function (response) {
            console.log(response.data)
            v.shows = response.data;
        })
    }

    var v = new Vue({
        el: '#root',
        data: {
            shows: [],

            carouselImages: ["http://the-culture-counter.com/wp-content/uploads/2013/09/All-Hail-the-King.jpg",
                "https://www.dccomics.com/sites/default/files/GalleryTV_1900x900_arrow_s3_alt_545bb1687ed4e4.45612658.jpg",
                "https://img00.deviantart.net/3717/i/2013/087/2/e/hannibal_the_series_wallpaper_by_knightryder1623-d5zlxji.jpg"],

            contactUsImgs: ["https://png.icons8.com/color/100/facebook.png", "https://png.icons8.com/color/100/twitter.png", "https://nationalpositions.com/wp-content/uploads/2016/10/l1.png"],
            // genre: '',
            name: '',
            genres: ['Action', 'Drama', 'Fantasy', 'Comedy', 'Horror', 'Supernatural', 'Psychological', 'Science Fiction']
        },
        methods: {
            search: function () {
                axios.get('/showSearch', {params: {name: v.name}}).then(function (response) {

                    if (response.data.length == 0) {
                        getShows();
                    }
                    else {
                        v.shows = response.data;
                    }
                    console.log(v.shows);
                }).catch(function (error) {
                    console.log(error);
                })
            },
            searchByGenre: function(genre){
                axios.get('/genreSearch', {params:{genre: genre}}).then(function(response){
                    v.shows = response.data;
                }).catch(function(error){
                    console.log(error);
                })
            }
        },
        mounted: function () {
            getShows();
        }
    });
</script>

</body>
</html>
